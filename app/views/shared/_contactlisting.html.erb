<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Company name</th>
      <th>Job title</th>
      <th>Actions</th>
      <th>Highrise</th>
    </tr>
  </thead>

  <tbody>
    <% @company.contacts.each do |contact| %>
    <tr>
      <td><%= link_to contact.fullname, company_contact_path(@company, contact) %></td>
      <td><%= contact.email %></td>
      <td><%= contact.company_name %></td>
      <td><%= contact.job_title %></td>
      <td class="centered">
        <%= link_to edit_company_contact_path(@company, contact), class: "btn btn-mini", alt: "Edit" do %>
          <i class="icon-edit"></i>
        <% end %>
        <%= link_to company_contact_path(@company, contact), method: :delete, data: { confirm: 'Are you sure?' }, alt: "Destroy", class: "btn btn-mini btn-danger" do %>
          <i class="icon-remove"></i>
        <% end %>
      </td>
      <td class="centered">
        <% if contact.on_highrise? %>
          <%= link_to company_contact_highrise_remove_path(@company, contact), class: "btn btn-mini" do %>
            <i class="icon-remove"></i> Remove
          <% end %>
        <% else %>
          <%= link_to company_contact_highrise_add_path(@company, contact), class: "btn btn-mini btn-success" do %>
            <i class="icon-plus"></i> Add
          <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
