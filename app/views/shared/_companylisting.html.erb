<table>
  <thead>
    <tr>
      <th>Name</th>
      <th># Contacts
      <th># Members</th>
      <th>Owner</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.contacts.size %></td>
        <td><%= company.users.size %></td>
        <td><%= company.user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>