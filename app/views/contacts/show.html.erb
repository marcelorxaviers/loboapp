<%= render 'shared/contextheader' %>

<div class="page-header">
  <h1><%= @contact.fullname %> <small>Contact Information</small></h1>
</div>


<div class="row">

  <div class="span9">
    <p>
      <strong>First name:</strong>
      <%= @contact.first_name %>
    </p>

    <p>
      <strong>Last name:</strong>
      <%= @contact.last_name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @contact.email %>
    </p>

    <p>
      <strong>Company name:</strong>
      <%= @contact.company_name %>
    </p>

    <p>
      <strong>Job title:</strong>
      <%= @contact.job_title %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @contact.phone %>
    </p>

    <p>
      <strong>Website:</strong>
      <%= @contact.website %>
    </p>
  </div>

  <div class="span3">
    <p>
      <h3>Actions</h3>

      <% if @company.users.include?(current_user) %>
        <%= link_to edit_company_contact_path(@contact.company, @contact), class: "btn" do %>
          <i class="icon-edit"></i> Edit contact info
        <% end %>
        <%= link_to 'Delete contact', company_contact_path(@contact.company, @contact), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      <% end %>
    </p>

    <p>
      <h3>Contact of</h3>
      <%= @company.name %>
    </p>
  </div>
</div>